{% extends 'template.html.twig' %}

{% block title %}Pharmacie index{% endblock %}

{% block body %}
    <h1>Pharmacie index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Adresse</th>
                <th>Matricule</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pharmacie in pharmacies %}
            <tr>
               <td>{{ pharmacie.login }}</td>
                <td>{{ pharmacie.nom }}</td>
                <td>{{ pharmacie.mdp }}</td>
                <td>
                    <a href="{{ path('pharmacie_show', {'id': pharmacie.id}) }}">show</a>
                    <a href="{{ path('pharmacie_edit', {'id': pharmacie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">il n'ya pas de pharmacies</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pharmacie_new') }}" class = "btn btn-success">Ajouter</a>
{% endblock %}
